<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_c"
        android:gravity="center_horizontal"
        android:text="What's your goal?"
        android:textColor="#FAFAFF"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/loseWt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Lose weight"
            android:textColor="#FAFAFF" />

        <Button
            android:id="@+id/maintainWt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Maintain weight"
            android:textColor="#FAFAFF" />

        <Button
            android:id="@+id/gainWt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Gain weight"
            android:textColor="#FAFAFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_goal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/howMuch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="How much?"
            android:textColor="#FAFAFF"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/goalWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Enter weight"
            android:inputType="number"
            android:textColor="#FAFAFF" />

        <Button
            android:id="@+id/letsGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Let's go!"
            android:textColor="#FAFAFF" />
    </LinearLayout>

</LinearLayout>