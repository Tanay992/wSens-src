<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_c"
        android:gravity="center_horizontal"
        android:text="My eating"
        android:textColor="#FAFAFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Today"
        android:textColor="#FAFAFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_action_previous_item"
            android:focusable="true" />

        <FrameLayout
            android:id="@+id/layout1"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/spinner1"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:background="@anim/spinner_animation" />

            <LinearLayout
                android:id="@+id/foodLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="#FAFAFF"
                    android:textSize="100dp" />

                <TextView
                    android:id="@+id/foodTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_marginTop="-10dp"
                    android:text="count"
                    android:textColor="#FAFAFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/habitslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" >
            </ListView>
        </FrameLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_action_next_item"
            android:focusable="true"
            android:padding="0dp" />
    </LinearLayout>

